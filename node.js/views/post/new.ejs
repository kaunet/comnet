<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
	<title>Board_Write</title>
	<style>
		@import url(https://fonts.googleapis.com/earlyaccess/nanumgothic.css);

		body {
  			font-family: 'Nanum Gothic', sans-serif;
		}
	</style>
</head>

<body>
<div id="Board">
	<form method="post" action="/post/new">
		<div id="writer">
			<table summary="게시글입력">
				<colgroup>
					<col width="10%">
					<col width="80%">
				</colgroup>
				<caption>
					<p>게시판 글쓰기
				</caption>
				<tr>
					<td align="center">작성자</td>
					<td><input type="text" name="writer" size="10" maxlength="8" value="<%= user.ID %>"></td>
				</tr>
				<tr>
					<td align="center">제 목</td>
					<td><input type="text" name="title"></td>
				</tr>
				<tr>
					<td align="center">내 용</td>
					<td><textarea name="content" rows="10" cols="100"></textarea></td>
				</tr>
				<tr>
					<td align="center">비밀번호</td>
					<td><input type="password" name="password" size="15" maxlength="15"></td>
				</tr>
			</table>
		</div>

		<div id="File">
			<table summary="파일입력">
				<td align="center" colspan="4" width="800px">
					<hr size="1">
					<tr>
						<td align="center">
							<div class="container">
								<div class="row">
									<div class="col-lg-12">
										<div class="form-group">
											<tr>
												<td><label for="file">파일입력</label></td>
												<td><input type="file" name="file" size="10" maxlength="10"></td>
												<td align="center">파일비밀번호</td>
												<td><input type="password" name="fpassword" size="15" maxlength="15"></td>
											</tr>
										</div>
									</div>
								</div>
							</div>
						</td>
					</tr>
				</div>

				<div id="button">
					<table>
						<tr>
							<td align="center" colspan="4" width="800px">
								<hr size="1">
								<div align="center">
									<input type="submit" value="등록" >&nbsp;&nbsp;
									<input type="button" value="뒤로" onclick="move('Board_List.ejs');">
								</div>
							</td>
						</tr>
					</table>
				</div>
			</table>
		</div>
	</form>
</div>
</body>
</html>