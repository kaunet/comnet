  </div><!--게시글 끝-->

  <div id="comment">
    <div class="container">
    </div><!--comment container-->
  </div><!--댓글-->
</body>

<div id="header">
  <form name="BoardWriterInform" method="post">
  <table summary="게시물정보">
    <tr>
  		<td ><div align="center"><h3><b>게시물</b></h3></div></td>
  	</tr>
    <tr>
      <td colspan=4>
      <table border="1" summery="제목/작성자/작성날짜">
      <tr>
        <td align=center bgcolor=gray width=70px height=20px> 제목 </td>
        <td align=left bgcolor=white width=200px colspan=2></td>
        <td align=center bgcolor=gray width=70px height=20px> 조회수 </td>
        <td align=left bgcolor=white width=70px colspan=1> </td>
      </tr>
      <tr>
        <td align=center bgcolor=gray width=70px height=20px> 작성자 </td>
        <td align=left bgcolor=white width=150px></td>
        <td align=center bgcolor=gray width=70px height=20px> 작성시간 </td>
        <td align=left bgcolor=white width=196px colspan=2>
          <div id="Time" style="clear:both;float:left;color:#666;">
						 <span> 2018-05-26 15:43:00</span>
											</div></td>
      </tr>
    </table>
    </td>
    </tr>
  </table>
</div>

<div id="main">
  <form name="BoardMain" method="post">
    <table summary="게시물내용">
      <tr>
        <td colspan=1>
          <table border="2" summery="내용">
          <tr>
            <td align=center bgcolor=gray width=100px height=50px> 첨부파일 </td>
            <td align=center bgcolor=white width=400px height=40%></td>
          <tr>
            <td align=left bgcolor=white width=500px height=400px colspan=2>
                <%= request.getParameter("content") %>
                <br> 가나다라마바사 </br>
                <br> 아자차카파타하 </br>
            </td></tr>
        </table>
        </td></tr></table>
  </form>
</div>



<div id="button">
  <table>
  <tr>
		<td align=center colspan=2 width=512px>
		<hr size=1>
		<div align="center">
		[<input type="button" value="목록" onclick="move('Board_List.ejs');"> |
		<input type="button" value="수정" onclick="move('Board_Update.ejs');"> |
		<input type="button" value="삭제" onclick="move('Board_Delete.ejs');">]<br>
		</div>
		</td>
	 </tr>
 </table>
